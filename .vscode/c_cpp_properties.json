{
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/**",
                "${workspaceFolder}/idl/idl",
                "${workspaceFolder}/include",
                "${workspaceFolder}/common",
                "${workspaceFolder}/modules"
            ],
            "defines": [
                "FASTCDR_DYN_LINK",
                "FASTDDS_DYN_LINK"
            ],
            "compilerPath": "/usr/bin/clang++",
            "cStandard": "c17",
            "cppStandard": "c++20",
            "intelliSenseMode": "macos-clang-arm64",
            "compilerArgs": [
                "-std=c++20",
                "-fmodules-ts"
            ],
            "browse": {
                "path": [
                    "${workspaceFolder}",
                    "${workspaceFolder}/modules"
                ]
            }
        }
    ],
    "version": 4
}
