{
    "version": 6,
    "configurePresets": [
        {
            "name": "oms-release",
            "displayName": "OMS Release Build",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        },
        {
            "name": "oms-debug", 
            "displayName": "OMS Debug Build",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-debug",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_CXX_STANDARD": "20",
                "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "oms-release-build",
            "configurePreset": "oms-release",
            "jobs": 0
        },
        {
            "name": "oms-debug-build", 
            "configurePreset": "oms-debug",
            "jobs": 0
        }
    ]
}
